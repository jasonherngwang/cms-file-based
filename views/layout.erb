<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8">
    <title>File-Based CMS</title>
  </head>
  <body>
    <header>
      <h1>Files</h1>
    </header>

    <% if session[:message] %>
      <div>
        <p><%= session.delete(:message) %></p>
      </div>
    <% end %>

    <main>
      <%== yield %>
    </main>
  </body>
</html>
